{% block component_afterpay_payment_method_installment %}
    <div class="payment-method-installment-fields" data-afterpay-payment-form="true" data-save-url="{{ path('frontend.afterpay.save-payment-details') }}">
        <input type="hidden" name="required_fields" value="afterpay_iban,afterpay_installment_plan{% if showPhoneNumber %},phoneNumber{% endif %}{% if showBirthday %},birthdayDay,birthdayMonth,birthdayYear{% endif %}" />
        {% sw_include '@Storefront/storefront/component/afterpay/payment/fields/iban-bic.html.twig' with
            {
                'afterpayPaymentMethod': 'installment'
            } %}

        {% if showBirthday %}
            {% sw_include '@Storefront/storefront/component/afterpay/payment/fields/birthday.html.twig' %}
        {% endif %}

        {% if showPhoneNumber %}
            {% sw_include '@Storefront/storefront/component/afterpay/payment/fields/phone.html.twig' %}
        {% endif %}

        <div class="form-row">
            <span>{{ ('afterpay.checkout.paymentFields.installment.requiredInfo')|trans }}</span>
        </div>

        {% sw_include '@Storefront/storefront/component/afterpay/payment/fields/installments.html.twig' %}
    </div>
{% endblock %}