{% block afterpay_profile_tracking %}
    {% set isLoginRegisterPage = false %}
    {% if activeRoute in ['frontend.account.login.page', 'frontend.checkout.register.page'] %}
        {% set isLoginRegisterPage = true %}
    {% endif %}
    {% set isLoggedIn = false %}
    {% if context.customer is not null and context.customer.active %}
        {% set isLoggedIn = true %}
    {% endif %}
    {% if shopware.config.AfterPay.config.activateProfileTracking and shopware.config.AfterPay.config.trackingId and (isLoggedIn or isLoginRegisterPage) %}
        <script type="text/javascript" id="afterpay-tracking">
            var _itt = {
                c: '{{ shopware.config.AfterPay.config.trackingId }}',
                s: '{{ context.token }}',
                t: 'CO'
            };
            (function () {
                var a = document.createElement('script');
                a.type = 'text/javascript';
                a.async = true;
                a.src = '//uc8.tv/{{ shopware.config.AfterPay.config.trackingId }}.js';
                var b = document.getElementsByTagName('script')[0];
                b.parentNode.insertBefore(a, b);
            })();
        </script>
        <noscript>
            <img src='//uc8.tv/img/{{ shopware.config.AfterPay.config.trackingId }}/{{ context.token }}'
                 border=0 height=0 width=0/>
        </noscript>
    {% endif %}
{% endblock %}